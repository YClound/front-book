<!DOCTYPE html>
<html lang="zh-CN">
#head()

<body>

	#header()

	<div class="container main-container ">
		<div class="row-fluid">
			#sidebar('')
			
			<div class="span10">
				
				<!-- #breadcrumb("欢迎") -->
				
				<div class="sortable row-fluid">
					<div class="box span12">
						<div class="box-content row-fluid ">
						   <div class="content-header">
								<h4>您好，$!userInfo.userName</h4>
							</div>	
												
							<div class="span5 main-info">
								<ul>
									<li><span>公司名：</span>  
									     <span> $!userInfo.compayInfo</span>
									</li>
									<li>
										<span>帐户名：</span>  
										<span> $!userInfo.loginId</span>  
										 <span class="li-ml45"> $!userInfo.mobile</span> 
										 <span class="li-ml20 btn btn-primary"><a href="user/userInfoEdit.htm" style="color: #fff;"> 修改</a> 
										 </span>
									</li>
								</ul>
							</div>	
							
							<div class="span3 main-balance">
							    <span>账户余额：</span> <span class="red">  <strong> $!acctInfo.balanceDesc </strong>    </span>  
							</div>
							
							<div class="span2 main-balance">
							    <span><a href="$!{contextPath}funds/acctIn.htm"
									class="goto-recharge"><strong>账户充值</strong></a></span>
							</div>		
							
							<div class="clearfix"></div>
						</div>
					</div>
				</div>

				<div class="sortable row-fluid">
					<div class="box span12">
						<div class="box-header" data-original-title="">
							<a href="$!{contextPath}biz/queryBizOrder.htm?pageSize=5"><h2>充值记录</h2> </a>
						</div>
						<div class="box-content">
							<table class="table">
								<thead>
									<tr>
										<th>订单号</th>
										<th>时间</th>
										<th>面额(元)</th>
										<th>手机号</th>
										<th>业务名称</th>
										<th>状态</th>
									</tr>
								</thead>
								<tbody>
								#foreach($!bizOrder in $!bizOrderList)
									<tr>
										<td>$!bizOrder.id</td>
										<td class="center">$!dateTool.format("yyyy-MM-dd HH:mm:ss", $!bizOrder.gmtCreate)</td>
										<td class="center">$!bizOrder.itemFacePriceDesc</td>
										<td class="center">$!bizOrder.itemUid</td>
										<td class="center">$!bizOrder.bizName</td>
										<td class="center">#bizOrderStatus($!bizOrder.statusDesc)
										</td>
									</tr>
								#end
								</tbody>
							</table>
						</div>
					</div>
				</div>

			</div>

		</div>
	</div>
	#footer()
</body>
</html>
