<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="  
        http://www.springframework.org/schema/beans       
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
        http://www.springframework.org/schema/context   
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean name="/callBackService"
		class="org.springframework.remoting.caucho.HessianServiceExporter">
		<property name="service" ref="callBackService" />
		<property name="serviceInterface"
			value="com.longan.client.remote.service.CallBackService" />
	</bean>

	<bean name="/supplyQueryService"
		class="org.springframework.remoting.caucho.HessianServiceExporter">
		<property name="service" ref="supplyQueryService" />
		<property name="serviceInterface"
			value="com.longan.client.remote.service.SupplyQueryService" />
	</bean>

	<bean name="/supplyForRemoteService"
		class="org.springframework.remoting.caucho.HessianServiceExporter">
		<property name="service" ref="supplyForRemoteService" />
		<property name="serviceInterface"
			value="com.longan.client.remote.service.SupplyForRemoteService" />
	</bean>

	<bean name="/shortMsgSendService"
		class="org.springframework.remoting.caucho.HessianServiceExporter">
		<property name="service" ref="shortMsgSendService" />
		<property name="serviceInterface"
			value="com.longan.client.remote.service.ShortMsgSendService" />
	</bean>
</beans> 