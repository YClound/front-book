<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="  
        http://www.springframework.org/schema/beans       
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
        http://www.springframework.org/schema/context   
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:config.properties</value>
		</property>
	</bean>

	<bean id="supplyForRemoteService"
		class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
		<property name="serviceUrl" value="${supplyForRemoteServiceUrl}" />
		<property name="serviceInterface"
			value="com.longan.client.remote.service.SupplyForRemoteService" />
		<property name="readTimeout" value="45000" />
	</bean>
	
	<bean id="shortMsgSendService"
		class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
		<property name="serviceUrl" value="${shortMsgSendServiceUrl}" />
		<property name="serviceInterface"
			value="com.longan.client.remote.service.ShortMsgSendService" />
		<property name="readTimeout" value="45000" />
	</bean>
</beans> 