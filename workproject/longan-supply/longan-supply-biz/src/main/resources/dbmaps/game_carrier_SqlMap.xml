<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="game_carrier">
	<resultMap class="com.longan.biz.dataobject.GameCarrier" id="gameCarrierResult">
		<result column="id" jdbcType="BIGINT" property="id" />
		<result column="gmt_create" jdbcType="DATETIME" property="gmtCreate" />
		<result column="gmt_modify" jdbcType="DATETIME" property="gmtModify" />
		<result column="carrier_name" jdbcType="VARCHAR" property="carrierName" />
		<result column="biz_id" jdbcType="INTEGER" property="bizId" />
		<result column="carrier_desc" jdbcType="VARCHAR" property="carrierDesc" />
		<result column="status" jdbcType="INTEGER" property="status" />
	</resultMap>

	<sql id="gameCarrierFullColumns">
		id, gmt_create, gmt_modify, carrier_name, biz_id,
		carrier_desc, status
	</sql>

	<select id="selectByPrimaryKey" parameterClass="com.longan.biz.dataobject.GameCarrier"
		resultMap="gameCarrierResult">
		select
		<include refid="game_carrier.gameCarrierFullColumns" />
		from game_carrier
		where id =
		#id:BIGINT#
	</select>

	<insert id="insert" parameterClass="com.longan.biz.dataobject.GameCarrier">
		insert into game_carrier (
		<include refid="game_carrier.gameCarrierFullColumns" />
		) values (#id:BIGINT#, now(), now(),
		#carrierName:VARCHAR#,
		#bizId:INTEGER#, #carrierDesc:VARCHAR#,
		#status:INTEGER#)
		<selectKey resultClass="Long" keyProperty="id">
			SELECT
			LAST_INSERT_ID()
		</selectKey>
	</insert>

	<sql id="whereConditions">
		<dynamic prepend="where">
			<isNotEmpty prepend="and" property="id">
				id =
				#id#
			</isNotEmpty>
			<isNotEmpty prepend="and" property="carrierName">
				carrier_name like
				CONCAT('%', #carrierName#, '%')
			</isNotEmpty>
			<isNotEmpty prepend="and" property="status">
				status =
				#status#
			</isNotEmpty>
			<isNotEmpty prepend="and" property="startGmtCreate">
				gmt_create &gt;
				#startGmtCreate#
			</isNotEmpty>
			<isNotEmpty prepend="and" property="endGmtCreate">
				gmt_create &lt;
				DATE_ADD(#endGmtCreate#,INTERVAL 1 DAY)
			</isNotEmpty>
		</dynamic>
	</sql>

	<update id="updateByPrimaryKey" parameterClass="com.longan.biz.dataobject.GameCarrier">
		update game_carrier
		set gmt_modify = now()
		<dynamic>
			<isNotNull prepend="," property="carrierName">
				carrier_name =
				#carrierName:VARCHAR#
			</isNotNull>
			<isNotNull prepend="," property="carrierDesc">
				carrier_desc =
				#carrierDesc:VARCHAR#
			</isNotNull>
			<isNotNull prepend="," property="status">
				status = #status:INTEGER#
			</isNotNull>
		</dynamic>
		where id = #id:BIGINT#
	</update>

	<select id="queryByPage" resultMap="gameCarrierResult">
		select
		<include refid="game_carrier.gameCarrierFullColumns" />
		FROM game_carrier INNER
		JOIN
		(SELECT id FROM
		game_carrier
		<include refid="game_carrier.whereConditions" />
		ORDER BY
		gmt_create DESC LIMIT #startRow#,#pageSize#) as page using
		(id)
	</select>

	<select id="queryByPageCount" resultClass="java.lang.Integer">
		SELECT count(*)
		FROM game_carrier
		<include refid="game_carrier.whereConditions" />
	</select>

	<select id="queryAll" resultMap="gameCarrierResult">
		select
		<include refid="game_carrier.gameCarrierFullColumns" />
		FROM game_carrier
		<include refid="game_carrier.whereConditions" />
		ORDER BY id ASC
	</select>
</sqlMap>