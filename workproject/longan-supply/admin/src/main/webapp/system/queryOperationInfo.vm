<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>操作信息查询</title>
    #parse("common/common.vm")
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/base.css" />
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/list-common.css" />
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/doubleDate.css" />
    <script type="text/javascript" src="$!staticServer/js/jquery-1.7.2.js"></script>
    <script type="text/javascript" src="$!staticServer/js/jquery-ui-1.8.22.custom.min.js"></script>
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/ui-lightness/jquery-ui-1.8.22.custom.css" />
    <script type="text/javascript" src="$!staticServer/js/tip.js"></script>
	<script type="text/javascript" src="$!staticServer/js/doubleDate2.0.js"></script>
	
</head>
<body class="list-body">
    $!errorMsg
    <div class="list-container">
        <div class="alert-title fz-16">操作信息查询</div>
        <form id="operationInfoQueryForm" class="queryForm" action="queryOperationInfo.do" method="post">
                #parse("common/select.vm")
            <table class="table query-style table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <td colspan="8" class="auto-style2">请填写查询条件 </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="w-8em">操作名称</td>
                        <td class="detail ">
                            <input type="text" name="operationName" value="$!operationInfoQuery.operationName"  />
                        </td>
                        <td class="w-8em">操作类型</td>
                        <td class="detail ">
                            #select($!typeList,'type',$!operationInfoQuery.type)
                        </td>                   
                        <td class="w-8em">状态 </td>
                        <td class="detail ">
                            #select($!statusList,'status',$!operationInfoQuery.status)
                        </td>
                        <td class="w-8em">归属菜单 </td>
                        <td class="detail ">
                            #selectClassMedium($!firstMenuList,'belongMenu',$!operationInfoQuery.belongMenu)
                        </td>
                    </tr>
        
                    <tr>
                        <td colspan="8" align="left">
                            <input class="btn btn-inverse" id="find" type="submit" value="查询" />
                            <input class="btn btn-inverse" type="reset" value="清空" />
                            <a href="operationInfoAdd.do" class="btn btn-inverse add" >新增操作</a>
                        </td>
                    </tr>
                </tbody>
             </table>

            <table class="table table-list table-striped table-bordered table-condensed" id="list">
                <thead>
                    <tr class="tr_detail">
                        <td>操作编号 </td>
                        <td>菜单编号</td>           
                        <td>操作名称</td>
                        <td>操作url</td>
                        <td>业务编号</td>
                        <td>类型</td>
                        <td>归属菜单 </td>
                        <td>状态 </td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    #foreach($!operationInfo in $!operationInfoList)
                        <tr>
                        <td>$!operationInfo.id</td>
                        <td>$!operationInfo.operationCode</td>
                        <td>$!operationInfo.operationName</td>
                        <td>$!operationInfo.operationUrl</td>
                        <td>$!operationInfo.bizId</td>
                        <td>$!operationInfo.typeDesc</td>
                        <td>$!operationInfo.belongMenuDesc</td>
                        <td>
                            <font #if($!operationInfo.showRed())color=red #end #if($!operationInfo.showGreen())color=green #end >
                            $!operationInfo.statusDesc
                            </font>
                        </td>
                        <td>
                            <a href="operationInfoEdit.do?id=$!operationInfo.id" class="btn btn-mini btn-primary add" >修改</a>
                        </td>
                    </tr>
                    #end
                    
                    
                </tbody>
            </table>
            #parse("common/pagination.vm")
            #pagination($!operationInfoQuery,'operationInfoQueryForm')
        
        </form>
     
    <script type="text/javascript">
        $(function(){
        $('.doubledate').kuiDate({
            className:'doubledate',
            isDisabled: "1"
        });
        });
        
    
    </script>
</body>
</html>
