<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>库存记录查询</title>
    #parse("common/select.vm")
    #parse("common/pagination.vm")
    #parse("common/common.vm")
    
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/base.css" />
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/list-common.css" />
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/doubleDate.css" />
    <script type="text/javascript" src="$!staticServer/js/jquery-1.7.2.js"></script>
    <script type="text/javascript" src="$!staticServer/js/jquery-ui-1.8.22.custom.min.js"></script>
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/ui-lightness/jquery-ui-1.8.22.custom.css" />
    <script type="text/javascript" src="$!staticServer/js/tip.js"></script>
    <script type="text/javascript" src="$!staticServer/js/doubleDate2.0.js"></script>
    
</head>
<body class="list-body">
    $!errorMsg
    <div class="list-container">
        <div class="alert-title fz-16">库存记录查询</div>
         <form id="stockLogQueryForm" class="queryForm" action="queryStockLog.do" method="post" onsubmit="return submitCheck();" >
            <input type="hidden" name="bizId" value="$!stockLogQuery.bizId" />
            
            <table class="table query-style table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <td colspan="8" class="auto-style2">请填写查询条件 </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="w-8em">流水号</td>
                        <td class="detail">
                            <input type="text" name="id" value="$!stockLogQuery.id"  />
                        </td>
                        <td class="w-8em">供货商品</td>
                        <td class="detail">
                            #selectClassMedium($!itemSupplyList,'itemSupplyId',$!stockLogQuery.itemSupplyId)
                        </td>
                        <td class="w-8em">商品</td>
                        <td class="detail">
                            #selectClassMedium($!itemList,'itemId',$!stockLogQuery.itemId)
                        </td>                   
                        <td class="w-8em">状态 </td>
                        <td class="detail">
                            #select($!statusList,'status',$!stockLogQuery.status)
                        </td>
                    </tr>
                    <tr>
                        <td class="w-8em">日志类型</td>
                        <td class="detail">
                            #select($!typeList,'type',$!stockLogQuery.type)
                        </td>


                        <td class="w-8em">创建日期 </td>
                        <td class="detail" colspan="3">
                             <div class="input-append">
                                <span class="input-date">
                                    <input class="input-small doubledate" readonly="readonly" size="10" type="text" name="startGmtCreate" value="$!dateTool.format("yyyy-MM-dd", $!supplyOrderQuery.startGmtCreate)" />
                                    <span class="add-on"><img src="../img/date.png"></span></span>至
                                <span class="input-date">
                                    <input id="endtime" class="input-small doubledate" readonly="readonly" type="text" name="endGmtCreate" value="$!dateTool.format("yyyy-MM-dd", $!supplyOrderQuery.endGmtCreate)" />
                                    <span class="add-on"><img src="../img/date.png"></span>
                                </span>
                            </div>
                        </td>
                        
                        
                    </tr>
        
                    <tr>
                        <td colspan="8" align="left">
                            <a class="btn btn-inverse"  onclick="javascript:query();"  >查询</a>
                            <input class="btn btn-inverse"  type="reset" value="清空" />
                            <a class="btn btn-inverse add" href="inStock.do?bizId=100" >入库操作</a>
                        </td>
                            
                    </tr>
                </tbody>
             </table>

        <table class="table table-list table-striped table-bordered table-condensed" id="list">
            <thead>
                <tr class="tr_detail">
                    <td>流水号 </td>
                    <td>商品编号</td>
                    <td>商品名称</td>
                    <td>商品成本价 </td>
                    <td>供货商品编号</td>
                    <td>数量 </td>
                    <td>库存摘要 </td>
                    <td>操作时间</td>
                    <td>操作员 </td>
                    <td>类型</td>
                    <td>状态</td>
                    <td>摘要</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody>
                
                #foreach($!stockLog in $!stockLogList)
                    <tr>
                    <td>$!stockLog.id</td>
                    <td>$!stockLog.itemId</td>
                    <td>$!stockLog.itemName</td>
                    <td>$!stockLog.itemCostPriceDesc</td>
                    <td>$!stockLog.itemSupplyId</td>
                    <td>$!stockLog.stockCount</td>
                    <td>$!stockLog.stockMemo</td>
                    <td>$!dateTool.format("yyyy-MM-dd HH:mm:ss", $!stockLog.gmtCreate)</td>
                    <td>$!stockLog.operName</td>
                    <td>$!stockLog.typeDesc</td>
                    <td>
                        <font #if($!stockLog.showRed())color=red #end #if($!stockLog.showGreen())color=green #end >
                        $!stockLog.statusDesc
                        </font>                 
                    </td>
                    <td>$!stockLog.memo</td>
                    <td>
                        #if($!stockLog.canActivate())
                            <a href="stockLogDeal.do?type=activate&stockLogId=$!stockLog.id&bizId=$!stockLogQuery.bizId" class="btn btn-mini btn-danger" onclick="return confirm('是否确认激活操作')">激活</a>
                        #end
                        #if($!stockLog.canInvalid())
                            <a href="stockLogDeal.do?type=invalid&stockLogId=$!stockLog.id&bizId=$!stockLogQuery.bizId" class="btn btn-mini btn-danger" onclick="return confirm('是否确认作废操作，确认后会将改批次所有库存都作废')">作废</a>
                        #end    
                        
                        #if($!stockLog.canDownload())
                            <a class="btn btn-mini"  onclick="javascript:downloadById($!stockLog.id);"  >下载</a>
                        #end    
                    </td>
                </tr>
                #end
                
               
            </tbody>
        </table>
         #pagination($!stockLogQuery,'stockLogQueryForm')
        
        </form>
    </div>
     
    <script type="text/javascript">
        $(function(){
        $('.doubledate').kuiDate({
            className:'doubledate',
            isDisabled: "1"
        });
        });
        
        
        function submitCheck()
        {
            if(!checkDate()){
                return false;
            }
            return true;
        }
        
        function downloadById(stockLogId){
            window.location.href="stockDownload.do?stockLogId=" + stockLogId;
        }           
        
        var checkDate = function()
        {
            var start_date =  jQuery("input[name='startGmtCreate']").val();
            var end_date = jQuery("input[name='endGmtCreate']").val();
            var objDate=new Date();
            var year = objDate.getFullYear();
            var month = objDate.getMonth() + 1;
            var day = objDate.getDate();
            month = month>=10?month:'0'+month;
            day = day>=10?day:'0'+day;
            var date = year + "-" + month + "-" + day;
            
            if(!compareDate(start_date, date)){
                alert("起始日期不能大于当前日期！");
                return false;
            }
            if(!compareDate(end_date, date)){
                alert("终止日期不能大于当前日期！");
                return false;
            }
            
            if(!compareDate(start_date, end_date))
            {
                alert("起始日期不能大于终止日期!");
                return false;
            }
            var  beginTime   =   new   Date(Date.parse(start_date.replace(/-/g,   "/")));
            var  endTime   =   new   Date(Date.parse(end_date.replace(/-/g,   "/"))); 
            var onemonthe=2*30*24*60*60*1000;
            
            if((endTime-beginTime)>onemonthe)
            {
                alert("只能查二个月之内的记录!");
                return false;
            }   
            return true; 
        }
    
        function compareDate(date1, date2){
            year1 = date1.substring(0,date1.indexOf("-"));
            year2 = date2.substring(0,date2.indexOf("-"));
            month1 = date1.substring(date1.indexOf("-") + 1,date1.lastIndexOf("-"));
            month2 = date2.substring(date2.indexOf("-") + 1,date2.lastIndexOf("-"));
            day1 = date1.substring(date1.lastIndexOf("-") + 1);
            day2 = date2.substring(date2.lastIndexOf("-") + 1);
            
            if(year1 > year2){
                return false;
            } else if(year1 < year2){
                return true;
            } else if(month1 > month2){
                return false;
            } else if(month1 < month2){
                return true;
            } else if(day1 > day2){
                return false;
            } else if(day1 < day2){
                return true;
            }
            return true;
        }
        
        function query(){
            jQuery('#stockLogQueryForm').attr("action", "queryStockLog.do");
            jQuery('#stockLogQueryForm').submit();
        }
        
    </script>
</body>
</html>
